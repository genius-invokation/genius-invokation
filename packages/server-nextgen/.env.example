# Database
DATABASE_URL=postgresql://user:password@localhost:5432/gitcg

# JWT Secret (change this in production!)
JWT_SECRET=change-this-to-a-random-secret-in-production

# GitHub OAuth
GH_CLIENT_ID=your-github-oauth-client-id
GH_CLIENT_SECRET=your-github-oauth-client-secret

# Optional: Override GitHub OAuth URLs (for testing)
# GH_CODE_EXCHANGE_URL=https://github.com/login/oauth/access_token
# GH_GET_USER_API_URL=https://api.github.com/user

# Server Port
PORT=3000

# Environment
NODE_ENV=development

# Optional: Redis for distributed room metadata
# REDIS_URL=redis://localhost:6379

# Optional: Health check configuration
# HEALTHZ_HOST=your-healthcheck-domain.com

# Optional: Debug log endpoint
# DEBUG_LOG_RECEIVE_URL=https://your-debug-log-service.com
