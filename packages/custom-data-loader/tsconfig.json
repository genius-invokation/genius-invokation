{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["ES2023"],

    "noEmit": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
  },
  "references": [{ "path": "./tsconfig.web.json" }]
}
