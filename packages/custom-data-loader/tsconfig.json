{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],

    "noEmit": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,

    "types": []
  },
  "references": [{ "path": "./tsconfig.web.json" }]
}
