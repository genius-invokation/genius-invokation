{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "noEmit": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
  }
}
